{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "preserveConstEnums": false,
        "module": "esnext",
        "target": "es6",
        "jsx": "preserve",
        "allowJs": true,
        "lib": [
            "scripthost",
            "dom",
            "es5",
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "source/**/*"
    ],
    "exclude": [
        "node_modules",
        "bower_components",
        "**/*.spec.ts"
    ]
}