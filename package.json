{
    "name": "webpack-starter-kit",
    "version": "3.0.0",
    "license": "MIT",
    "contributors": [
        {
            "name": "Adrian Gargula",
            "email": "adriangargula@interia.pl"
        }
    ],
    "scripts": {
        "watch": "webpack --config webpack.config.js --mode development --watch",
        "live": "webpack --config webpack.config.js --mode development --watch --liveReload",
        "build": "webpack --config webpack.config.js --mode development",
        "min": "webpack --config webpack.config.js --mode production --forDEV",
        "dist": "webpack --config webpack.config.js --mode production",
        "dev": "webpack-dev-server --forDEV --disableNodeJs",
        "server": "node ./tools/server.js --port 8080",
        "typedoc": "typedoc --options typedoc.config.js",
        "clear": "node ./tools/clear.js"
    },
    "engines": {
        "node": ">=8.0.0 <13.0.0"
    },
    "devDependencies": {
        "@babel/core": "~7.8.4",
        "@babel/preset-env": "~7.8.4",
        "@types/express": "~4.17.2",
        "autoprefixer": "~9.7.4",
        "babel-loader": "~8.0.6",
        "copy-webpack-plugin": "~5.1.1",
        "css-loader": "~3.4.2",
        "fibers": "~4.0.2",
        "mini-css-extract-plugin": "~0.9.0",
        "node-sass": "~7.0.0",
        "optimize-css-assets-webpack-plugin": "~5.0.3",
        "postcss-loader": "~3.0.0",
        "preprocess-loader": "~0.3.0",
        "raw-loader": "~4.0.0",
        "sass": "~1.25.0",
        "sass-loader": "~8.0.2",
        "style-loader": "~1.1.3",
        "terser-webpack-plugin": "~2.3.4",
        "ts-loader": "~6.2.1",
        "typedoc": "~0.16.9",
        "typescript": "~3.7.5",
        "uglifycss": "~0.0.29",
        "webpack": "~4.41.5",
        "webpack-cli": "~3.3.10",
        "webpack-dev-server": "~3.10.3",
        "webpack-livereload-plugin": "~2.2.0",
        "webpack-node-externals": "~1.7.2"
    },
    "dependencies": {
        "express": "~4.17.1",
        "http-server": "~0.12.1",
        "nocache": "~2.1.0",
        "serve-index": "~1.9.1"
    }
}
